<launch>
    
    <!-- ARGUMENTS - OAK-D -->
    <arg name="nodeName"         default="nnd"/>
    <arg name="pub_detections"   default="false"/>
    <arg name="modelName"        default="mobilenet"/> <!-- mobilenet or yolov4 -->
    
    <!-- ARGUMENTS - T265 -->
    <arg name="enable_fisheye"   default="true"/>
    <arg name="linear_accel_cov" default="0.01"/>
    <arg name="initial_reset"    default="true"/>
    
    <!-- ARGUMENTS - RPLIDAR -->
    <arg name="lidarSerial"      default="/dev/ttyUSB_RPLIDAR"/>
    
    <!-- ARGUMENTS - AMCL -->
    <arg name="scan_topic"     default="rplidar/scan"/>
    <arg name="odom_frame_id"  default="t265_odom_frame"/>
    <arg name="base_frame_id"  default="base_link"/>
    <arg name="initial_pose_x" default="0.0"/>
    <arg name="initial_pose_y" default="0.0"/>
    <arg name="initial_pose_a" default="0.0"/>
    
    <arg name="mappingType" default="2d"/> <!-- 2d or 3d -->
    <arg name="map_file" default="$(find akros)/maps/studio_obs_gmapping.yaml"/>
    
    <!-- INCLUDE AKROS LAUNCH FILE -->
    <include file="$(find akros)/launch/demo_bringup_$(arg mappingType).launch">
        <arg name="nodeName"         value="$(arg nodeName)"/>
        <arg name="modelName"        value="$(arg modelName)"/>
        <arg name="lidarSerial"      value="$(arg lidarSerial)"/>
        <arg name="enable_fisheye"   value="$(arg enable_fisheye)"/>
        <arg name="linear_accel_cov" value="$(arg linear_accel_cov)"/>
        <arg name="initial_reset"    value="$(arg initial_reset)"/>
    </include>
    
    <!-- MAP SERVER -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>
    
    <!-- INCLUDE AMCL LAUNCH FILE -->
    <include file="$(find akros)/launch/base_launch/amcl_omni_corrected.launch">
        <arg name="scan_topic"     value="$(arg scan_topic)"/>
        <arg name="odom_frame_id"  value="$(arg odom_frame_id)"/>
        <arg name="base_frame_id"  value="$(arg base_frame_id)"/>
        <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
        <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
        <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
    </include>

</launch>