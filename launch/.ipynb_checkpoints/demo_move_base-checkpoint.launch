<launch>
    
    <!-- ARGUMENTS - OAK-D -->
    <arg name="nodeName"         default="nnd"/>
    <arg name="pub_detections"   default="false"/>
    <arg name="modelName"        default="mobilenet"/> <!-- mobilenet or yolov4 -->
    
    <!-- ARGUMENTS - T265 -->
    <arg name="enable_fisheye"   default="true"/>
    <arg name="linear_accel_cov" default="0.01"/>
    <arg name="initial_reset"    default="true"/>
    
    <!-- ARGUMENTS - RPLIDAR -->
    <arg name="lidarSerial"      default="/dev/ttyUSB_RPLIDAR"/>
    
    <!-- ARGUMENTS - AMCL -->
    <arg name="scan_topic"     default="rplidar/scan"/>
    <arg name="odom_frame_id"  default="t265_odom_frame"/>
    <arg name="base_frame_id"  default="base_link"/>
    <arg name="initial_pose_x" default="0.0"/>
    <arg name="initial_pose_y" default="0.0"/>
    <arg name="initial_pose_a" default="0.0"/>
    
    <arg name="mappingType" default="2d"/> <!-- 2d or 3d -->
    <arg name="map_file" default="$(find akros)/maps/zernikestraat_studio_obstacles.yaml"/>
    
    <!-- INCLUDE AKROS LAUNCH FILE -->
    <include file="$(find akros)/launch/demo_bringup_$(arg mappingType).launch">
        <arg name="nodeName"         value="$(arg nodeName)"/>
        <arg name="modelName"        value="$(arg modelName)"/>
        <arg name="lidarSerial"      value="$(arg lidarSerial)"/>
        <arg name="enable_fisheye"   value="$(arg enable_fisheye)"/>
        <arg name="linear_accel_cov" value="$(arg linear_accel_cov)"/>
        <arg name="initial_reset"    value="$(arg initial_reset)"/>
    </include>
    
    <!-- MAP SERVER -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>
    
    <!-- INCLUDE AMCL LAUNCH FILE -->
    <include file="$(find akros)/launch/base_launch/amcl_omni_corrected.launch">
        <arg name="scan_topic"     value="$(arg scan_topic)"/>
        <arg name="odom_frame_id"  value="$(arg odom_frame_id)"/>
        <arg name="base_frame_id"  value="$(arg base_frame_id)"/>
        <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
        <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
        <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
    </include>

  <!-- MOVE BASE ARGUMENTS -->
  <arg name="base_global_planner" default="global_planner/GlobalPlanner"/> <!-- OLD: navfn/NavfnROS -->  
  <arg name="base_local_planner" default="base_local_planner/TrajectoryPlannerROS"/> <!-- OLD: dwa_local_planner/DWAPlannerROS-->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="/camera/odom/sample" />
  <arg name="move_forward_only" default="true"/>

  <!-- MOVE_BASE -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <!-- param name="base_global_planner" value="$(arg base_global_planner)" / -->
    <param name="base_local_planner" value="$(arg base_local_planner)" />
    <rosparam file="$(find akros)/nav_params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find akros)/nav_params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find akros)/nav_params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find akros)/nav_params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find akros)/nav_params/move_base_params.yaml" command="load" />
    <rosparam file="$(find akros)/nav_params/global_planner_params.yaml" command="load" />
    <rosparam file="$(find akros)/nav_params/base_local_planner_params.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>